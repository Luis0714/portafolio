---
import GitHubIcon from "../assets/icons/GitHubIcon.astro";
import EthernetIcon from "../assets/icons/EthernetIcon.astro";
import SocialBadge from "./SocialBadge.astro";
import Tag from "./Tag.astro";
import type { TypeTag } from "../interfaces/tag";

interface Props {
  title: string;
  description: string;
  image: string;
  tags: TypeTag[];
  link: string;
  github: string;
}

const { title, description, image, tags, link, github } = Astro.props as Props;
---

<div class="bg-gray-800 dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden flex flex-col h-full">
  <img class="w-full h-48 object-cover object-center" src={image} alt={title} />
  
  <div class="p-6 flex flex-col flex-1">
    <h3 class="text-xl font-semibold text-yellow-100 dark:text-white">
      {title}
    </h3>
    <p class="mb-4 text-base font-normal text-gray-300 dark:text-gray-200 text-pretty">
      {description}
    </p>
    <nav class="flex gap-2 flex-wrap mb-4">
      {tags.map((tag) => (
        <Tag>
          {tag.name}
          <tag.icon class="size-4" />
        </Tag>
      ))}
    </nav>

    <!-- Este nav se coloca con mt-auto para que siempre esté en la parte inferior -->
    <nav class="mt-auto flex gap-2 lg:flex-col lg:gap-4">
      <SocialBadge href={link}>
        Ver Proyecto <EthernetIcon class="size-4" />
      </SocialBadge>
      <SocialBadge href={github}>
        Ver Código <GitHubIcon class="size-4" />
      </SocialBadge>
    </nav>
  </div>
</div>
